    <label for="item_select">Item</label>
    <select class="form-control" id="item_select" name="item_select">
    {% for item in items %}
      <option value="{{ item.id }}">{{ item.name }}</li>
    {% endfor %}
  </select>
  </div>

  <div class="form-group">
    <label for="user_select">Usu√°rio</label>
